{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/dist/server.js",
      "protocol": "auto",
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}/dist/server.js",
      "preLaunchTask": null,
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/server.ts"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Nodemon",
      "address": "localhost",
      "port": 5858,
      "restart": true
    },
    {
      "name": "Launch chrome with debugger",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/dist/server.js",
      "userDataDir": "${workspaceRoot}/.vscode/chrome"
    }
  ],
  "compounds": [
    {
      "name": "Launch WebSite",
      "configurations": ["Launch via nodemon", "Attach to Nodemon"]
    },
    {
      "name": "Launch WebSite with chrome",
      "configurations": [
        "Launch via nodemon",
        "Attach to Nodemon",
        "Launch chrome with debugger"
      ]
    }
  ]
}
